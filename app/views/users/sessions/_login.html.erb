<% if current_user.nil? and current_company.nil? %>
	<%= form_for("user", :url => user_session_path) do |f| %>
		<%= f.text_field :email, :class => "sign_up_field" %>
		<%= f.password_field :password, :class => "sign_up_field" %>
		<%= f.submit 'Sign in' %> </br>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
		<%= link_to "Forgot your password?", new_password_path('user') %>
  <% end %>
<% elsif company_signed_in? %>
  <h3> Your company is already registered! Please <%= link_to 'click here', '/' %> to go to
	  your company's EventAlerts homepage! </h3>  
<% else %>
	<h3> You are already signed in! </h3>
<% end %>
