	<h2>Company Sign in</h2>
<% if current_user.nil? and current_company.nil? %>	
	<p> Enter your email address and the password you recieved when you registered your company with EventAlerts. </p>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<p><%= f.label :email %><br />
		<%= f.email_field :email %></p>

		<p><%= f.label :password %><br />
		<%= f.password_field :password %></p>

		<p><%= f.submit "Sign in" %></p>
	<% end %>

	<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% elsif user_signed_in? %>
  <h3> Please sign out to access this feature. </h3>
<% else %>
	<h3> Your company is already signed in! </h3>
<% end %>
