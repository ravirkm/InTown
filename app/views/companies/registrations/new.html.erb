<h2>Company Sign up</h2>
<% if current_user.nil? and current_company.nil? %>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

		<p><%= f.label :contact_name %><br />
		<%= f.text_field :contact_name %></p>
		
		<p><%= f.label :contact_email %><br />
		<%= f.email_field :email %></p>
		
		<p><%= f.label :company_name %><br />
		<%= f.text_field :company_name %></p>

		<p><%= f.label :password %><br />
		<%= f.password_field :password %></p>

		<p><%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %></p>
		
		<p><%= f.label :prototype_key %> -Companies need a prototype key to sign up during prototyping stage of EventAlerts.<br/> 
		<%= f.text_field :prototype_key  %></p>

		<p><%= f.submit "Sign up" %></p>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
<% elsif user_signed_in? %>
  <h3> Registered users may not register companies! Please contact 
    an EventAlerts spokesperson if you think your company could 
    benefit from our services. </h3>
<% else %>
	<h3> Your company is already registered! Please <%= link_to 'click here', '/' %> to go to
	  your company's EventAlerts homepage! </h3>
<% end %>
